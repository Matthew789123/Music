<Page x:Class="Projekt_1.Views.ItemsDisplay"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projekt_1.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SongsView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Name="ItemsLabel" FontSize="30" FontWeight="Bold"></Label>
        <ComboBox Name="GenresList" Padding="0,0,40, 0" Margin="5 5 0 5" SelectedIndex="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
            <ComboBoxItem>Genre</ComboBoxItem>
        </ComboBox>
        <ListView Grid.ColumnSpan="2" Grid.Row="1" Name="ItemsContainer">
        </ListView>
    </Grid>
</Page>
